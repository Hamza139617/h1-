using namespace std;

//---------------- SHAPESHIFTER -----------------
int*** CreateViews(int* data, int size, int& num_views) {
    
    // finding the value of num_views 

    int i = 1;

    while (i <= size) {

        if (size % i == 0) {
            num_views++;

        }
        i++;

    }

    // creating views 

    int*** views = new int** [num_views];
    int view = 0; // for presenting the view 

    for (i = 1; i < size; i++) {

        if (size % i == 0) {

            int rows = i;
            int cols = size / rows;

            
                *(views + view) = new int* [rows];

            

            for (int j = 0; j < rows; j++) {  // for creating the number of columns in each row 
                *(*(views + view) + j) = new int[cols];

            }

            // for making each row point to the data address 

            for (int j = 0; j <= size; j += cols) {
                *(*(views + view) + j) = (data + j);
            }

            


            view++;

        }

    }
    
    
    
    return views ;
}

