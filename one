// question3 
char* calculateGrades(int arr[], int size) {
	char* arr1 = new char[size];

	for (int i = 0; i < size; i++) {

		if (arr[i] >= 91 && arr[i] <= 100) {
			*(arr1 + i) = 'A';
		}
		else if (arr[i] >= 76 && arr[i] <= 90) {
			*(arr1 + i) = 'B';
		}
		else if (arr[i] >= 60 && arr[i] <= 75) {
			*(arr1 + i) = 'C';
		}
		else if (arr[i] >= 51 && arr[i] <= 59) {
			*(arr1 + i) = 'D';
		}
		else {
			*(arr1 + i) = 'F';
		}

	}

	return arr1;

}

// question4 

int* sortArray(int* arr, int size) {
	int count = 0;
	int evenS;

	int min = *arr;

	for (int i = 0; i < size; i++) {
		
		if (min > *(arr + i))
			min = *(arr + i);

	}

	min = min - 1;

	for (int i = 0; i < size; i++) {

		if (*(arr + i) % 2 == 0) {
			count++;
		}

	}

	int* evenArr = new int[count];

	evenS = count;
	count = 0;

	for (int i = 0; i < size; i++) {
		if (*(arr + i) % 2 == 0) {

			*(evenArr + count) = *(arr + i);
			*(arr + i) = min;

			count++;

		}
	}

	int* arr2 = new int[size];

	for (int i = 0; i < size; i++) {
		*(arr2 + i) = 0;
	}

	// sorting for odd

	for (int i = 0; i < size; i++) {
		for (int j = i + 1; j < size; j++) {

			if (*(arr + j) < *(arr + i)) {
				int temp = *(arr + i);
				*(arr + i) = *(arr + j);
				*(arr + j) = temp;
			}

		}
	}

	for (int i = 0, j = 0 ; j < size; ) {

		if (*(arr + i) > min) {
			*(arr2 + j) = *(arr + i);
			j++;
		}

		if (i == size) {
			*(arr2 + j) = 0;
			j++;
		}

		if (i < size) {
			i++;
		}

	}

	for (int i = 0; i < evenS; i++) {
		for (int j = i + 1; j < evenS; j++) {

			if (*(evenArr + j) < *(evenArr + i)) {
				int temp = *(evenArr + i);
				*(evenArr + i) = *(evenArr + j);
				*(evenArr + j) = temp;
			}

		}
	}

	for (int i = 0 , j = 0 ; i < size ; i++) {

		if (*(arr2 + i) == min) {
			
			(*(arr2 + i)) = (*(evenArr + j));
		
			j++;
			
		}

	}
	


	for (int i = 0; i < size; i++) {
		cout << *(arr2 + i) << " ";
	}

	cout << endl;
	
	

	delete[] evenArr;
	evenArr = nullptr;
	
	

	return arr2;
}

