#include <iostream>
#include <cmath>
using namespace std;

int main() {
    
    int rows = 7;
    int t = 1 ;
    
    rows--;
    
    
    for(int i = -rows ; i <= rows ; i++ ) {
        for(int j = -rows ; j <= rows ; j++ ) {
            
            if(rows >= ((i < 0) ? -i : i) + ((j < 0) ? -j : j)) {
                
                if(t == 1) {
                    cout << "#";
                    t = -1;
                }else {
                    cout << "@";
                    t = 1;
                }
                
                
            }else {
                cout << " ";
            }
            
        }
        
        cout << endl ;
    }
    
    return 0;
}
